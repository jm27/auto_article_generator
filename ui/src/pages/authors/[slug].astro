---
import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase/supabaseClient";
import "../../styles/global.css";

// Get the author slug from URL
const { slug } = Astro.params;

console.log('Author Slug:', slug);
// Parse slug to get first and last name
// Format: "john-doe" -> ["john", "doe"]
const nameParts = slug?.split('-') || [];
const firstName = nameParts[0] || '';
const lastName = nameParts.slice(1).join('-') || ''; // Handle multi-part last names

console.log('Parsed Name:', { firstName, lastName });
// Fetch author from directus_users by matching first_name and last_name
const { data: users, error: userError } = await supabase
  .from('directus_users')
  .select(`
    id,
    first_name,
    last_name,
    email,
    hil_profiles (
      bio,
      profile_image,
      social_link,
      verified_human
    )
  `)
  .ilike('first_name', firstName)
  .ilike('last_name', lastName)
  .limit(1);

console.log('Fetched Users:', users);

if (userError) {
  console.error('Error fetching author:', userError);
}

const user = users && users.length > 0 ? users[0] : null;

// Handle hil_profiles - it can be an object, array, or null
let profile = null;
if (user?.hil_profiles) {
  profile = Array.isArray(user.hil_profiles) && user.hil_profiles.length > 0
    ? user.hil_profiles[0]
    : !Array.isArray(user.hil_profiles)
    ? user.hil_profiles
    : null;
}

console.log('User:', user);
console.log('Profile:', profile);

if (!user || !profile) {
  console.error('Author not found or missing profile data');
  return Astro.redirect('/404');
}

const fullName = `${user.first_name} ${user.last_name}`;

// Fetch posts by this author
const { data: posts, error: postsError } = await supabase
  .from('posts')
  .select('title, slug, content, images, published_at')
  .eq('hil_assignee', user.id)
  .order('published_at', { ascending: false })
  .limit(10);

if (postsError) {
  console.error('Error fetching author posts:', postsError);
}

// SEO metadata
const siteUrl = Astro.url.origin;
const canonicalUrl = `${siteUrl}/authors/${slug}`;
const seoTitle = `${fullName} - Author at My Daily Feed`;
const seoDescription = profile.bio || `Read articles by ${fullName} on My Daily Feed`;
---

<Layout 
  seoTitle={seoTitle}
  seoDescription={seoDescription}
  ogImage={profile.profile_image}
  canonicalUrl={canonicalUrl}
>
  <div class="bg-gray-50 min-h-screen flex flex-col">
    <div class="w-full max-w-full sm:max-w-2xl lg:max-w-3xl mx-auto px-4 py-6 sm:px-6 lg:px-8 lg:py-8">
      
      {/* Author Profile Card */}
      <article class="bg-white rounded-lg shadow-lg border border-gray-200 mb-8">
        <div class="px-4 py-6 sm:px-6 lg:px-8 lg:py-10">
          <div class="flex flex-col items-center text-center mb-6">
            <img
              src={profile.profile_image}
              alt={fullName}
              class="w-32 h-32 rounded-full object-cover border-4 border-indigo-100 shadow-lg mb-4"
              loading="eager"
            />
            
            <div class="flex items-center gap-2 mb-2">
              <h1 class="text-3xl font-extrabold text-gray-900">
                {fullName}
              </h1>
              {profile.verified_human && (
                <span class="inline-flex items-center gap-1 text-xs bg-green-50 text-green-700 font-medium px-2 py-1 rounded-full border border-green-200">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  Verified Human Author
                </span>
              )}
            </div>

            {profile.social_link && (
              <a 
                href={profile.social_link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm text-indigo-600 hover:text-indigo-800 hover:underline mb-4 flex items-center gap-1"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
                Follow on Social Media
              </a>
            )}
            
            <p class="text-base text-gray-700 leading-relaxed max-w-2xl">
              {profile.bio}
            </p>
          </div>
        </div>
      </article>

      {/* Author's Articles Section */}
      {posts && posts.length > 0 && (
        <section class="bg-white rounded-lg shadow-lg border border-gray-200 p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
            </svg>
            Articles by {fullName}
          </h2>
          
          <div class="space-y-6">
            {posts.map((post) => (
              <div class="group border-b border-gray-100 pb-6 last:border-b-0 last:pb-0">
                <a href={`/posts/${post.slug}`} class="block">
                  <div class="flex gap-4">
                    {post.images && post.images[0] && (
                      <div class="flex-shrink-0 w-24 h-24 sm:w-32 sm:h-32 overflow-hidden rounded-lg bg-gray-200">
                        <img
                          src={post.images[0]}
                          alt={post.title}
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                          loading="lazy"
                        />
                      </div>
                    )}
                    
                    <div class="flex-1 min-w-0">
                      <h3 class="font-bold text-gray-900 text-lg mb-2 group-hover:text-indigo-600 transition-colors duration-200 line-clamp-2">
                        {post.title}
                      </h3>
                      
                      {post.content && (
                        <p class="text-gray-600 text-sm mb-3 line-clamp-2">
                          {post.content.length > 150 ? post.content.slice(0, 150) + '...' : post.content}
                        </p>
                      )}
                      
                      <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">
                          {new Date(post.published_at).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric' 
                          })}
                        </span>
                        <span class="text-sm text-indigo-600 font-medium group-hover:text-indigo-800 transition-colors duration-200">
                          Read More â†’
                        </span>
                      </div>
                    </div>
                  </div>
                </a>
              </div>
            ))}
          </div>
        </section>
      )}

      {/* No Articles Message */}
      {(!posts || posts.length === 0) && (
        <div class="bg-white rounded-lg shadow-lg border border-gray-200 p-8 text-center">
          <p class="text-gray-600">No articles published yet by {fullName}.</p>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
