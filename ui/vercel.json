{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/content/ingest-movies",
      "schedule": "30 0 * * *"
    },
    {
      "path": "/api/newsletter/send-newsletter",
      "schedule": "25 20 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/content/sitemap.xml"
    }
  ]
}
